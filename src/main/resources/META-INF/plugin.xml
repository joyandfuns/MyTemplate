<idea-plugin>
    <id>com.pupu.temsetup</id>
    <name>pupu-tem-setup</name>
    <vendor>pupu</vendor>
    <version>1.0.0</version>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.android</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.pupu.temsetup.services.MyApplicationService"/>
        <projectService serviceImplementation="com.pupu.temsetup.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.pupu.temsetup.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>

    <extensions defaultExtensionNs="com.android.tools.idea.wizard.template">
        <wizardTemplateProvider implementation="com.pupu.temsetup.WizardTemplateProviderImpl" />
    </extensions>
</idea-plugin>
